{
  "name": "@mangle/lsp-server",
  "version": "0.1.0",
  "description": "Language Server Protocol (LSP) implementation for the Mangle declarative programming language",
  "author": "Next-Gen Engineering and Research Development LLC",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "mangle-lsp": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "generate-parser": "antlr4ng -Dlanguage=TypeScript -visitor -o src/parser/gen Mangle.g4",
    "prebuild": "npm run generate-parser",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -watch -p tsconfig.json"
  },
  "dependencies": {
    "antlr4ng": "^3.0.4",
    "vscode-languageserver": "^9.0.0",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "antlr4ng-cli": "^2.0.0",
    "typescript": "^5.0.0"
  }
}

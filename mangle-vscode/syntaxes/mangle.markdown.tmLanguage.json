{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mangle (Markdown)",
  "scopeName": "markdown.mangle.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    { "include": "#mangle-code-block" }
  ],
  "repository": {
    "mangle-code-block": {
      "begin": "(^|\\G)(\\s*)(\\`{3,}|~{3,})\\s*(?i:(mangle|mg))(?:\\s+[^`~]*)?\\s*$",
      "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
      "beginCaptures": {
        "3": { "name": "punctuation.definition.markdown" },
        "4": { "name": "fenced_code.block.language.markdown" }
      },
      "endCaptures": {
        "3": { "name": "punctuation.definition.markdown" }
      },
      "name": "markup.fenced_code.block.markdown",
      "contentName": "meta.embedded.block.mangle",
      "patterns": [
        { "include": "source.mangle" }
      ]
    }
  }
}
